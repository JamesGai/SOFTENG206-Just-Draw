<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f9f9d1 #f9f9d1;"
  xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="nz.ac.auckland.se206.GameOverController">
  <columnConstraints>
    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
  </rowConstraints>
  <Text fill="#784b04" onMouseEntered="#onHoverTitle" strokeType="OUTSIDE" strokeWidth="0.0"
    text="Game Over" GridPane.columnIndex="1">
    <font>
      <Font size="81.0"/>
    </font>
  </Text>
  <Label fx:id="winLoseLabel" onMouseEntered="#onHoverWinLose" text="You won"
    GridPane.columnIndex="1" GridPane.rowIndex="1">
    <font>
      <Font size="44.0"/>
    </font>
    <GridPane.margin>
      <Insets bottom="20.0"/>
    </GridPane.margin>
  </Label>
  <Button mnemonicParsing="false" onAction="#onSave" onMouseEntered="#onHoverSave" prefWidth="150.0"
    style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #667302 #667302; -fx-border-width: 3;"
    text="Save Drawing" GridPane.rowIndex="2">
    <font>
      <Font size="20.0"/>
    </font>
  </Button>
  <Button fx:id="playAgainButton" mnemonicParsing="false" onAction="#onPlayAgain"
    onMouseEntered="#onHoverPlayAgain" prefWidth="150.0"
    style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-width: 3; -fx-border-color: #667302 #667302;"
    text="Play Again" GridPane.columnIndex="2" GridPane.rowIndex="2">
    <font>
      <Font size="20.0"/>
    </font>
  </Button>
  <Label fx:id="textToSpeechLabel" onMouseEntered="#onHoverTextToSpeechLabel" text="OFF"
    GridPane.rowIndex="1">
    <GridPane.margin>
      <Insets top="40.0"/>
    </GridPane.margin>
  </Label>
  <ImageView fitHeight="50.0" fitWidth="50.0" onMouseClicked="#onTextToSpeech"
    onMouseDragEntered="#onHoverTextToSpeech" GridPane.rowIndex="1">
    <Image url="@../images/speaker-filled-audio-tool.png"/>
    <GridPane.margin>
      <Insets bottom="40.0"/>
    </GridPane.margin>
  </ImageView>
  <ImageView fitHeight="170.0" fitWidth="170.0" onMouseEntered="#onHoverLogo"
    GridPane.columnIndex="1" GridPane.rowIndex="2">
    <Image url="@../images/logo-speedy-sketchers.png"/>
    <GridPane.margin>
      <Insets bottom="40.0"/>
    </GridPane.margin>
  </ImageView>
</GridPane>
